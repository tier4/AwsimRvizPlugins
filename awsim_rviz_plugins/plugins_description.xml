<library path="awsim_rviz_plugins">
  <class
    name="awsim_rviz_plugins/EgoPlacement"
    type="awsim_rviz_plugins::EgoPlacement"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Set AWSIM EGO pose from Rviz tool.
    </description>
  </class>

  <class
    name="awsim_rviz_plugins/NpcSpawner"
    type="awsim_rviz_plugins::NpcSpawner"
    base_class_type="rviz_common::Tool"
  >
    <description>
      Set ego pose.
    </description>
  </class>

  <class
    name="awsim_rviz_plugins/NpcSpawnerStatus"
    type="awsim_rviz_plugins::NpcSpawnerStatus"
    base_class_type="rviz_common::Display"
  >
    <description>
      Displays a geometry_msgs::PoseStamped message.  &lt;a href="http://www.ros.org/wiki/rviz/DisplayTypes/Pose"&gt;More Information&lt;/a&gt;.
    </description>
    <message_type>geometry_msgs/msg/PoseStamped</message_type>
  </class>
</library>
